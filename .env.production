# 生产环境配置文件
# ⚠️ 部署到服务器后，请修改以下配置！

# 数据库配置
DB_TYPE=postgresql
DB_USER=postgres
DB_PASSWORD=your_strong_password_here  # ⚠️ 必须修改！
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crm_system

# Redis配置（如果需要）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Google搜索API（可选）
GOOGLE_API_KEY=your_api_key
GOOGLE_CSE_ID=your_cse_id

# 安全配置
SECRET_KEY=your_secret_key_here  # ⚠️ 必须修改！生成方法：python -c "import secrets; print(secrets.token_urlsafe(32))"
ALLOWED_HOSTS=your_domain.com,your_server_ip

# 邮件配置（如果需要）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 应用配置
DEBUG=False
LOG_LEVEL=INFO
